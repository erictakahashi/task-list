<h1>todos</h1>

<table class="todoList">
  <tr class="noteSupBar">
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <tr>
	<td class="inputCellEmpty"></td>
	<td class="inputLine" colspan="2">
	  <!-- <%= link_to 'Novo Item', new_list_path %> -->
	  <%= render 'form' %>
	</td>
  </tr>

<% @lists.each do |list| %>
  <tr>
	<td class="cellEmpty"></td>
	<td class="cellContent"><p><%= list.list %></p></td>
    <!-- <td><%= link_to 'Show', list %></td> -->
    <!-- <td><%= link_to 'Edit', edit_list_path(list) %></td> -->
    <td class="cellDelete"><%= link_to 'X', list, confirm: 'Deseja realmente excluir?', method: :delete %></td>
  </tr>
<% end %>

  <tr>
    <td class="lastCell" colspan="3">
	  <div class="lastLine">
	    <p><%= @lists.count %> itens left</p>
	  </div>
	</td>
  </tr>
</table>